{
  "compilerOptions": {
    "types": ["jest", "@testing-library/jest-dom"],
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "target": "ES2015",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*"]
    },
    
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "next.config.js", "jest.config.js"],
  "exclude": ["node_modules", "src/mocks/**/*.ts", "src/test/**/*.ts", "**/*.test.ts", "**/__tests__"]
}
